<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.godaddy.commerce.services.sample">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-permission android:name="com.godaddy.commerce.services.order.ORDER_PROVIDER" />
    <uses-permission android:name="com.godaddy.commerce.services.order.ORDER_SERVICE" />

    <uses-permission android:name="com.godaddy.commerce.services.mediator.MEDIATOR_SERVICE" />

    <uses-permission android:name="com.godaddy.commerce.services.inventory.INVENTORY_SERVICE" />
    <uses-permission android:name="com.godaddy.commerce.services.inventory.INVENTORY_PROVIDER" />

    <uses-permission android:name="com.godaddy.commerce.services.business.BUSINESS_SERVICE" />

    <uses-permission android:name="com.godaddy.commerce.services.payment.PAYMENT_SERVICE" />

    <uses-permission android:name="com.godaddy.commerce.services.catalog.CATALOG_PROVIDER" />
    <uses-permission android:name="com.godaddy.commerce.services.catalog.CATALOG_SERVICE" />

    <uses-permission android:name="com.godaddy.commerce.services.auth.AUTH_SESSION_SERVICE" />

    <uses-permission android:name="com.godaddy.commerce.services.transaction.TRANSACTION_SERVICE" />

    <application
        android:name=".CommerceServicesApp"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".CommerceServicesActivity"
            android:windowSoftInputMode="adjustResize"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>